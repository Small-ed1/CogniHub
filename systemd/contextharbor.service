[Unit]
Description=ContextHarbor FastAPI Server
After=network.target

[Service]
Type=simple
User=small_ed
WorkingDirectory=%h/contextharbor
EnvironmentFile=-%h/contextharbor/.env
ExecStart=%h/contextharbor/.venv/bin/python -m uvicorn contextharbor.app:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
